<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/app_bar_add_traveling" />
    <Button
        android:id="@+id/btnclose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_action_back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_action_send"
        android:layout_marginTop="17dp"
        android:layout_marginRight="13dp"/>
    
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="56dp"
    android:id="@+id/scrollView2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/insertDate"
            android:layout_alignBottom="@+id/insertDate"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:text="Date" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:text=":" />

        <EditText
            android:id="@+id/insertDate"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/building"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_edittext"
            android:drawableRight="@drawable/ic_action_date"
            android:editable="false"
            android:padding="5dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/from"
            android:layout_alignBottom="@+id/from"
            android:layout_alignStart="@+id/textView2"
            android:text="From" />

        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:text=":" />

        <EditText
            android:id="@+id/from"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/insertDate"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded_edittext"
            android:padding="5dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/to"
            android:layout_alignBottom="@+id/to"
            android:layout_alignStart="@+id/textView3"
            android:text="To" />

        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/to"
            android:layout_alignBottom="@+id/to"
            android:layout_alignParentEnd="true"
            android:text=":"
            android:id="@+id/textView12" />

        <EditText
            android:id="@+id/to"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/from"
            android:layout_below="@+id/from"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded_edittext"
            android:padding="5dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/total_day"
            android:layout_alignBottom="@+id/total_day"
            android:layout_alignStart="@+id/textView4"
            android:text="Total Days" />

        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/total_day"
            android:layout_alignBottom="@+id/total_day"
            android:layout_alignParentEnd="true"
            android:text=":" />

        <EditText
            android:id="@+id/total_day"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/to"
            android:layout_below="@+id/to"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="number"
            android:padding="5dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/rate"
            android:layout_alignBottom="@+id/rate"
            android:layout_alignStart="@+id/textView5"
            android:text="Rate" />

        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/rate"
            android:layout_alignBottom="@+id/rate"
            android:layout_alignParentEnd="true"
            android:text=":"
            android:id="@+id/textView11" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView11"
            android:layout_alignBottom="@+id/textView11"
            android:layout_alignParentEnd="true"
            android:text="Rp." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/rate"
            android:layout_alignBottom="@+id/rate"
            android:layout_alignEnd="@+id/total_day"
            android:text="/Day" />

        <EditText
            android:id="@+id/rate"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_below="@+id/total_day"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="number"
            android:padding="5dp"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/budget"
            android:layout_alignBottom="@+id/budget"
            android:layout_alignStart="@+id/textView6"
            android:layout_toStartOf="@+id/budget"
            android:text="Budget" />

        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/budget"
            android:layout_alignBottom="@+id/budget"
            android:layout_alignParentEnd="true"
            android:text=":" />

        <TextView
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/budget"
            android:layout_alignBottom="@+id/budget"
            android:layout_alignParentEnd="true"
            android:text="Rp." />

        <EditText
            android:id="@+id/budget"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/rate"
            android:layout_below="@+id/rate"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="number"
            android:padding="5dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/project"
            android:layout_alignBottom="@+id/project"
            android:layout_alignStart="@+id/textView7"
            android:text="Project/Cust" />

        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/project"
            android:layout_alignBottom="@+id/project"
            android:layout_alignParentEnd="true"
            android:text=":" />

        <EditText
            android:id="@+id/project"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/to"
            android:layout_below="@+id/budget"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded_edittext"
            android:padding="5dp"
            android:textSize="15dp" />

        <Button
            android:id="@+id/buttonUpload"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignTop="@+id/edittext_name_pdf"
            android:background="@drawable/upload_button_corner"
            android:text="Upload File"
            android:textColor="@color/white"
            android:textSize="11dp" />

        <EditText
            android:id="@+id/edittext_name_pdf"
            android:layout_width="235dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/project"
            android:layout_alignStart="@+id/buttonUpload"
            android:layout_below="@+id/project"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded_edittext"
            android:paddingBottom="5dp"
            android:paddingLeft="95dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:textSize="15dp" />



    </RelativeLayout>
</ScrollView>
</RelativeLayout>