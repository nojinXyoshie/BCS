<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/bg"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/buildings" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_action_close"
                    android:backgroundTint="@color/orange" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/profile" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="160dp"
                    android:text="Name"
                    android:textColor="@color/orange"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_centerHorizontal="true"
                    android:text="NIK"
                    android:textSize="18dp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/white"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="17dp"
                    android:background="@drawable/ic_action_date"
                    android:backgroundTint="@color/black_overlay" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="9dp"
                    android:layout_toEndOf="@+id/imageView13"
                    android:text="ATTENDANCE DATE"
                    android:textColor="@color/orange"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/atten_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView30"
                    android:layout_below="@+id/textView30"
                    android:text="Date" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignTop="@+id/textView36"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_action_day"
                    android:backgroundTint="@color/chef" />

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/atten_date"
                    android:layout_below="@+id/atten_date"
                    android:layout_marginTop="19dp"
                    android:text="OVERTIME DAY"
                    android:textColor="@color/orange"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dayOt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView36"
                    android:layout_below="@+id/textView36"
                    android:text="Day" />

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="30dp"
                    android:layout_height="33dp"
                    android:layout_alignStart="@+id/imageView17"
                    android:layout_below="@+id/dayOt"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ic_action_project"
                    android:backgroundTint="@color/chef" />

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/dayOt"
                    android:layout_alignTop="@+id/imageView18"
                    android:text="PROJECT"
                    android:textColor="@color/orange"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/projectOt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView37"
                    android:layout_below="@+id/textView37"
                    android:text="Project"/>

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignStart="@+id/imageView13"
                    android:layout_below="@+id/projectOt"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/ic_action_customer"
                    android:backgroundTint="@color/chef" />

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/projectOt"
                    android:layout_below="@+id/projectOt"
                    android:layout_marginTop="15dp"
                    android:text="CUSTOMER"
                    android:textColor="@color/orange"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView38"
                    android:layout_below="@+id/textView38"
                    android:text="Customer" />

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignEnd="@+id/imageView19"
                    android:layout_alignTop="@+id/textView39"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_action_check_in"
                    android:backgroundTint="@color/chef"
                    android:id="@+id/imageView20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/customer"
                    android:layout_below="@+id/customer"
                    android:layout_marginTop="14dp"
                    android:text="CHECK IN"
                    android:textColor="@color/orange"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:id="@+id/textView39" />

                <TextView
                    android:id="@+id/checkIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView39"
                    android:layout_below="@+id/textView39"
                    android:text="Check In" />


                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignEnd="@+id/imageView20"
                    android:layout_alignTop="@+id/textView41"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_action_check_out"
                    android:backgroundTint="@color/chef"
                    android:id="@+id/imageView21" />

                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/checkIn"
                    android:layout_below="@+id/checkIn"
                    android:layout_marginTop="14dp"
                    android:text="CHECK OUT"
                    android:textColor="@color/orange"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/checkOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView41"
                    android:layout_below="@id/textView41"
                    android:text="Check Out" />

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignStart="@+id/imageView21"
                    android:layout_alignTop="@+id/textView42"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_action_status"
                    android:backgroundTint="@color/chef" />

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/checkOut"
                    android:layout_below="@+id/checkOut"
                    android:layout_marginTop="16dp"
                    android:text="STATUS"
                    android:textColor="@color/orange"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/claimStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView42"
                    android:layout_below="@+id/textView42"
                    android:text="Status" />

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/claimStatus"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp"
                    android:layout_toEndOf="@+id/textView30"
                    android:text="BRUTO"
                    android:textColor="@color/orange"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bruto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/nett"
                    android:layout_alignTop="@+id/textView43"
                    android:text="Bruto" />

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView43"
                    android:layout_below="@+id/bruto"
                    android:text="NETT"
                    android:textColor="@color/orange"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nett"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView48"
                    android:layout_alignTop="@+id/textView46"
                    android:text="Nett" />

                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView46"
                    android:layout_below="@+id/nett"
                    android:text="NOMINAL"
                    android:textColor="@color/orange"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/textView47"
                    android:text="Rp." />

                <TextView
                    android:id="@+id/nominal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/textView48"
                    android:text=" Nominal" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/imageView30"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/ic_action_activity"
                    android:backgroundTint="@color/chef" />

                <TextView
                    android:id="@+id/textView49"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView30"
                    android:layout_marginStart="18dp"
                    android:layout_toEndOf="@+id/imageView30"
                    android:text="ACTIVITY"
                    android:textColor="@color/orange"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/activity"
                    android:layout_marginRight="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView49"
                    android:layout_below="@+id/textView49"
                    android:text="Activity" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/white"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/ic_action_note"
                    android:backgroundTint="@color/chef" />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView24"
                    android:layout_marginStart="18dp"
                    android:layout_toEndOf="@+id/imageView24"
                    android:text="NOTE"
                    android:textColor="@color/orange"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/note"
                    android:layout_marginRight="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView44"
                    android:layout_below="@+id/textView44"
                    android:text="-" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvCancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/white"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="end"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/rondedcornerbutton_cancel"
                    android:text="Cancel"
                    android:textColor="@color/red"
                    android:textSize="12dp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>