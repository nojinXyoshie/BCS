<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.annisa.bcs.ForgotPassword">


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:id="@+id/appBar">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:title="Menu"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/orange"
                app:popupTheme="@style/AppTheme.PopupOverlay">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Forgot Password"
                    android:id="@+id/toolbar_text"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

    <Button
        android:id="@+id/btnclose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_action_back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/currentPassword"
        android:layout_below="@+id/btnclose"
        android:layout_marginTop="30dp"
        android:text="Insert Email :"
        android:id="@+id/textView46" />

    <EditText
        android:id="@+id/currentPassword"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView46"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Email"
        android:inputType="textPassword"
        android:padding="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/currentPassword"
        android:layout_alignStart="@id/currentPassword"
        android:layout_below="@+id/currentPassword"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedcornerbutton"
        android:text="Submit"
        android:textColor="@color/white" />

</RelativeLayout>