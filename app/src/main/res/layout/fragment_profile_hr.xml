<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="60dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/building"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/buildings" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:id="@+id/profileImage"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profileImage"
        android:layout_alignEnd="@+id/profileImage"
        android:background="@drawable/ic_action_round"
        android:src="@drawable/ic_action_camera" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@color/grey"
        android:layout_below="@id/building"
        android:id="@+id/tableLayout"
        android:scrollbars="vertical">

        <View
            android:layout_height="0.5dp"
            android:background="#FF909090" />

        <TableRow
            android:id="@+id/rowName"
            android:background="@color/white"
            android:paddingTop="10dp"
            android:paddingLeft="15dp">

            <RelativeLayout
                android:layout_width="355dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:paddingLeft="2dp"
                    android:text="Name"
                    android:textSize="12dp"/>

                <TextView
                    android:paddingLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Annisa"
                    android:layout_below="@id/profile_name"
                    android:textColor="@color/black"
                    android:id="@+id/textView9" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/textView9"
                    android:background="#FF909090" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:id="@+id/rowNik"
            android:background="@color/white"
            android:paddingTop="10dp"
            android:paddingLeft="15dp">

            <RelativeLayout
                android:layout_width="355dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/profile_nik"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:paddingLeft="2dp"
                    android:text="NIK"
                    android:textSize="12dp"/>

                <TextView
                    android:paddingLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="1603061"
                    android:layout_below="@id/profile_nik"
                    android:textColor="@color/black"
                    android:id="@+id/txtnik"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/txtnik"
                    android:background="#FF909090" />
            </RelativeLayout>
        </TableRow>


        <TableRow
            android:id="@+id/rowEmail"
            android:background="@color/white"
            android:paddingTop="10dp"
            android:paddingLeft="15dp">

            <RelativeLayout
                android:layout_width="355dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:paddingLeft="2dp"
                    android:text="Email"
                    android:textSize="12dp"/>

                <TextView
                    android:paddingLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="annisakartikautami19@gmail.com"
                    android:layout_below="@id/profile_email"
                    android:id="@+id/txtemail"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/txtemail"
                    android:background="#FF909090" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:id="@+id/changePassword"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:paddingLeft="15dp">
            <RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textColor="@color/black"
                    android:id="@+id/txtchangepassword"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_action_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/txtchangepassword"
                    android:background="#FF909090" />
            </RelativeLayout>
        </TableRow>


        <TableRow
            android:id="@+id/rowLogout"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:paddingTop="13dp"
            android:paddingBottom="15dp"
            android:paddingLeft="13dp">
            <TextView
                android:text="Logout"
                android:textColor="@color/red"
                android:id="@+id/txtlogout"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#FF909090" />
        </TableRow>

    </TableLayout>

</RelativeLayout>