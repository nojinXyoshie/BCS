<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/small_bg_logo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        app:srcCompat="@drawable/small_bcs_logo_login" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buildings" />

    <EditText
        android:id="@+id/nik"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/password"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="45dp"
        android:background="@drawable/roundedcorner"
        android:drawableLeft="@drawable/ic_action_nik"
        android:ems="10"
        android:hint="NIK"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textSize="15dp" />

    <EditText
        android:background="@drawable/roundedcorner"
        android:id="@+id/password"
        android:layout_width="280dp"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nik"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_action_password"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:background="@drawable/roundedcornerbutton"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:elevation="10dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/btnLogin"
        android:text="MASUK"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/white">
    </Button>

    <TextView
        android:id="@+id/textViewLupaPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="16dp"
        android:textColor="#4B4B4D"
        android:text="Lupa Password?" />

</RelativeLayout>

